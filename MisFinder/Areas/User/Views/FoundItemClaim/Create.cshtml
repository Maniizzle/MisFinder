@model FoundItemClaimViewModel
@{
    ViewData["Title"] = "Create";
    var image = "Photos/home 1081.jpg";
}
<style>
    .form-control {
        border-radius: 18px;
    }

    .card-no-border .card {
        border: 0px;
        border-radius: 23px;
        /*-webkit-box-shadow: none;*/
        box-shadow: none;
    }

    .card {
        width: 75%;
        margin: auto;
        margin-bottom: 30px;
        max-width: 100%;
    }

    .card {
        position: relative;
        /*display: -webkit-box;
        display: -ms-flexbox;*/
        display: flex;
        -webkit-box-orient: vertical;
        -webkit-box-direction: normal;
        /*-ms-flex-direction: column;*/
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    * {
        outline: none;
    }

    *, ::after, ::before {
        box-sizing: border-box;
    }

    body {
        background: #fff;
        font-family: "Montserrat", sans-serif;
        margin: 0;
        overflow-x: hidden;
        color: #67757c;
        font-weight: 300;
        /* font-size: 14px;*/
    }

    .card-body {
        -webkit-box-flex: 1;
        -ms-flex: 1 1 auto;
        flex: 1 1 auto;
        padding: 50px;
    }

    @@media (min-width: 992px) {
        .col-lg-12 {
            -webkit-box-flex: 0;
            -ms-flex: 0 0 100%;
            flex: 0 0 100%;
            max-width: 100%;
        }
    }

    .col-lg-6 {
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }
</style>
<h3 class="container">  </h3>

<div class="row" onload="ola()" style=" margin-left:20px; margin-right:20px">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-title"><h3> Claim</h3>  </div>
                <form asp-action="Create" style="width:100%;" class="form form-horizontal" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">

                            <input type="hidden" asp-for="FoundItemId" />
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"> </label>
                                <textarea asp-for="Description" class="form-control" placeholder=" Detailed Description of Item you lost "></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DateLost" class="control-label">Date Lost</label>
                                <input placeholder="Selected date" id="datePickerId" type="date" name="DateLost" class="form-control daterangepicker">
                                <span asp-validation-for="DateLost" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="WhereItemWasLost" class="control-label">Location</label>
                                <input asp-for="WhereItemWasLost" class="form-control" placeholder="e.g  In a bar" />
                                <span asp-validation-for="WhereItemWasLost" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Color" class="control-label"></label>
                                <input asp-for="Color" class="form-control" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            @*<div class="form-group">
                                    <label asp-for=" WhereItemWasLost" class="control-label"></label>
                                    <input asp-for="WhereItemWasLost" class="form-control" placeholder="e.g,In a bus" />
                                    <span asp-validation-for="WhereItemWasLost" class="text-danger"></span>
                                </div>*@
                            <div class="form-group">
                                <label asp-for=" PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="08023455432" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @*   <label asp-for=" Image" class="control-label"></label>*@
                                <img class="rounded-circle" src="~/@image" style="margin-left:70px; margin-bottom:10px;" height="200" width="200" id="imagePreview" />
                                <input asp-for="Image" type="file" class="form-control" style="margin-left:70px; width:200px;" onchange="ShowImagePreview(this, document.getElementById('imagePreview'))" /> @*placeholder="upload Image" />*@
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Claim" class="btn btn-primary" />
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    datePickerId.max = new Date().toISOString().split("T")[0];
    function ShowImagePreview(imageUploader, previewImage) {
        var reader = new FileReader();
        reader.onload = function (e) {
            $(previewImage).attr('src', e.target.result);
        }
        reader.readAsDataURL(imageUploader.files[0]);
    }
</script>
@model LostItemClaimViewModel
@{
    ViewData["Title"] = "Create";
}
@{
Layout="_LayoutUser";
}
<h2>Create Claim</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="LostItemId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="Name" class="control-label">Name of Item Found</label>
            <input asp-for="Name" class="form-control" placeholder="" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>*@


            <div class="form-group">
                <label class="control-label">Detailed Description  </label>
                <textarea asp-for="Description" class="form-control" rows="3"
                          placeholder="A green File bag containing Certificates found in a bus going to Yaba on Monday Evening. Name on University Certificate is Obafemi Kazeem"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFound" class="control-label">Date Found</label>
                <input placeholder="Selected date" id="datePickerId" type="date" name="DateFound" class="form-control daterangepicker">
                @*<input type="date" asp-for="DateFound.Date" class="form-control" />*@
                <span asp-validation-for="DateFound" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="09056463632" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhereItemWasFound" class="control-label">Phone Number</label>
                <input asp-for="WhereItemWasFound" class="form-control" placeholder="09056463632" />
                <span asp-validation-for="WhereItemWasFound" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Image</label>
                <input type="file" name="Image" accept="image/* ">
                @* <span asp-validation-for="PhoneNumber" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Claim" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<script>
    datePickerId.max = new Date().toISOString().split("T")[0];

</script>
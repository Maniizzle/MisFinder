@model IEnumerable<FoundItem>
@{
    Layout = "_SearchLayout";
}
@{
    ViewData["Title"] = "Search";
}

<div>
    Cant Find your Lost Item?
    <a><span> Register your Lost Item </span> </a>
</div>
@if (Model.Count() == 0)
{
    <div>No Found Item Matches </div>
}
else
{

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex p-10 no-block">
                            <div class="align-slef-center">
                                <h2 class="m-b-0">$6,759</h2>
                                <h6 class="text-muted m-b-0">This Week</h6>
                            </div>
                            <div class="align-self-center display-6 ml-auto"><i class="text-info icon-Dollar-Sign"></i></div>
                        </div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:70%; height:3px;"> <span class="sr-only">50% Complete</span></div>
                    </div>
                    <a asp-controller="FoundItemClaim" title="Claim" asp-action="SameUser" asp-route-id="@item.Id"><img style="height:40px; width: 40px" src="~/img/icon/lostclaimicon.png" /></a>

                </div>
            </div>
        }
    </div>
}
@model FoundItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="mb-2">Register <span>Found Item</span></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name of Item Found</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"> </label>
                <input asp-for="Description" class="form-control" placeholder="Brief details " />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                @* <label asp-for="Location" class="control-label"></label>*@
                @* @Html.DropDownList("Location", Html.GetEnumSelectList<Location>(), "Please Select Location", new { @class = "form-control" })*@
                <select asp-for="Location" asp-items="@Html.GetEnumSelectList<Location>()" class="form-control">
                    <option selected="selected" value="">Please select Location</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Description" class="control-label"> </label>
                    <input asp-for="Description" class="form-control" placeholder="Brief details " />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="DateFound" class="control-label">Date Found</label>
                <input placeholder="Selected date" id="datePickerId" type="date" name="DateFound" class="form-control daterangepicker">
                @*<input type="date" asp-for="DateFound.Date" class="form-control" />*@
                <span asp-validation-for="DateFound" class="text-danger"></span>

            </div>


            <div class="form-group">
                <label asp-for="Colour" class="control-label"></label>
                <input asp-for="Colour" class="form-control" />
                <span asp-validation-for="Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" SpecificLocation" class="control-label"></label>
                <input asp-for="SpecificLocation" class="form-control" placeholder="e.g, In a bus" />
                <span asp-validation-for="SpecificLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image</label>
                <input name="Photo" class="form-control" type="file" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Profile">Back to List</a>
</div>


<script>
datePickerId.max = new Date().toISOString().split("T")[0];
</script>
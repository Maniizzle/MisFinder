
@model LostItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Register Lost Item</h4>
<hr />
<div class="row" onload="ola()">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfLostItem" class="control-label">Name of Item Lost</label>
                <input asp-for="NameOfLostItem" class="form-control" />
                <span asp-validation-for="NameOfLostItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"> </label>
                <input asp-for="Description" class="form-control" placeholder="Brief details " />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="Location" asp-items="@Html.GetEnumSelectList<Location>()" class="form-control">
                    <option selected="selected" value="">Please select Location</option>
                </select>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Description" class="control-label"> </label>
                    <input asp-for="Description" class="form-control" placeholder="Brief details " />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="DateMisplaced" class="control-label">Date Found</label>
                <input placeholder="Selected date" id="datePickerId" type="date" name="DateMisplaced" class="form-control daterangepicker">
                <span asp-validation-for="DateMisplaced" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" SpecificLocation" class="control-label"></label>
                <input asp-for="SpecificLocation" class="form-control" placeholder="e.g, In a bus" />
                <span asp-validation-for="SpecificLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=" PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="08023455432" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for=" SpecificLocation" class="control-label"></label>
                    <input asp-for="SpecificLocation" class="form-control" placeholder="e.g, In a bus" />
                    <span asp-validation-for="SpecificLocation" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Profile">Back to List</a>
</div>
